---
import { Monitor, Smartphone, Tv, Gamepad2, Star } from 'lucide-react';
import type { StreamingService } from '../types';

interface Props {
  service: StreamingService;
}

const { service } = Astro.props;
---

<a href={`/service/${service.slug}`} class="block">
  <div class="bg-[#1e1e1e] rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
    <div class="p-6">
      <div class="flex items-center justify-between mb-4">
        <img
            src={service.logo}
            alt={`${service.name} логотип`}
            class="h-12 object-contain"
        />
        <div class="flex items-center">
          <Star className="w-5 h-5 text-yellow-400 fill-current" />
          <span class="ml-1 text-white">{service.rating}</span>
        </div>
      </div>

      <h2 class="text-xl font-bold text-white mb-2">{service.name}</h2>

      <div class="space-y-4">
        <div class="flex justify-between text-gray-300">
          <span>Базовый тариф</span>
          <span class="font-semibold">{service.pricing.basic_plan}₽/мес</span>
        </div>

        <div class="flex flex-wrap gap-2">
          {service.platform_support.web_browser && <Monitor className="w-5 h-5 text-blue-400" />}
          {service.platform_support.mobile_app && <Smartphone className="w-5 h-5 text-blue-400" />}
          {service.platform_support.smart_tv && <Tv className="w-5 h-5 text-blue-400" />}
          {service.platform_support.game_consoles && <Gamepad2 className="w-5 h-5 text-blue-400" />}
        </div>

        {service.promo_codes.length > 0 && (
            <div class="bg-[#ff6600] bg-opacity-20 rounded-lg p-3 mb-4">
              <div class="flex justify-between items-center mb-4">
                <code class="font-mono text-[#ff6600] text-base">
                  {service.promo_codes[0].code}
                </code>
              </div>
              <p class="text-[#ff6600] font-semibold mb-2">{service.promo_codes[0].discount}</p>
            </div>
          )}
          </div>

          <div class="mt-6">
            <button
                class="block w-full bg-blue-600 text-white text-center py-2 rounded-md hover:bg-blue-700 transition-colors duration-300"
            >
              Перейти на сайт
            </button>
          </div>
          </div>
          </div>
          </a>